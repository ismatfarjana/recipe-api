<h2>Login</h2>
{{ if error }}
  <p>Error: {{ error }} </p>
{{ /if }}

<form method="post" action="/user/login">
  <label for="email">Email:</label><br>
  <input type="text" id="email" name="email" value="Enter Email"><br><br>
  <label for="password">Password:</label><br>
  <input type="text" id="password" name="password" value="Enter password"><br><br>
  <input type="submit" value="Submit">
</form> 